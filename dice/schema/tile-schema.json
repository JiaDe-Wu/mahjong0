{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "description": "The schema is a definition for Tile as v1aplha.",
    "definitions": {
        "metadata": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "vendorService": {
                    "type": "string"
                },
                "dependentOnVendorService": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "category",
                "version"
            ]
        },
        "spec": {
            "type": "object",
            "properties": {
                "global": {
                    "type": "object",
                    "properties": {
                        "env": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {"type":"string"},
                                    "value": {"type": "string"},
                                    "valueRef": {"type": "string"}
                                }
                            }
                        }
                    }
                },
                "preRun": {
                    "type": "object",
                    "properties": {
                        "stages": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {"type":"string"},
                                    "command": {"type": "string"}
                                }
                            }
                        }
                    }
                },
                "dependencies": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "tileReference": {
                            "type": "string"
                        },
                        "tileVersion": {
                            "type": "string"
                        }
                    }
                },
                "inputs": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "inputType": {
                                "type": "string"
                            },
                            "dependencies": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "field": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "defaultValue": {"type": "string"},
                            "defaultValues": {
                                "type": "array",
                                "items": { "type": "string" }
                            },
                            "override": {
                                "type": "object",
                                "properties": {
                                    "name": { "type": "string" },
                                    "field": { "type": "string" }
                                }
                            },
                            "require": {
                                "type": "boolean"
                            }
                        },
                        "required":["name", "inputType", "require"]
                    }
                },
                "manifests": {
                    "type": "object",
                    "properties": {
                        "manifestType": {"type":"string"},
                        "files": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "folders": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "dependencies": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "outputs": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string" },
                            "outputType": { "type": "string"},
                            "defaultValue": { "type": "string"},
                            "description": { "type": "string"},
                            "defaultValueCommand": { "type": "string"}
                        }
                    }
                },
                "notes:": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                },
                "postRun": {
                    "type": "object",
                    "properties": {
                        "stages": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {"type":"string"},
                                    "command": {"type": "string"}
                                }
                            }
                        }
                      }
                }
            },
            "required":["inputs", "outputs"]
        }
    },
    "type": "object",
    "properties": {
        "apiVersion": {
            "type": "string",
            "pattern": "^mahjong.io/v1.*$"
        },
        "kind": {
            "const": "Tile"
        },
        "metadata": {
            "$ref": "#/definitions/metadata"
        },
        "spec": {
            "$ref": "#/definitions/spec"
        }

    }
}