{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "$comment": "The schema is a definition for Deployment as v1aplha.",
    "definitions": {
        "metadata": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "vendorService": {
                    "type": "string"
                },
                "dependentOnVendorService": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "spec": {
            "type": "object",
            "properties": {
                "template": {
                    "type": "object",
                    "properties": {
                        "tiles": {
                            "type":"array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "tileReference":{ "type": "string" },
                                    "tileVersion": { "type": "string" },
                                    "inputs": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "name": { "type": "string" },
                                                "inputValue": { "type": "string" },
                                                "inputValues": {
                                                    "type": "array",
                                                    "items": { "type": "string" }
                                                }
                                            }
                                        }
                                        
                                    },
                                    "manifests": {
                                        "type": "object",
                                        "properties": {
                                            "manifestType": {"type": "string"},
                                            "namespace": {"type": "string"},
                                            "files": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            },
                                            "folders": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "summary": {
                    "type": "object",
                    "properties": {
                        "description": { "type": "string" },
                        "outputs": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {"type": "string"},
                                    "tileReference": {"type": "string"},
                                    "outputValueRef": {"type": "string"}
                                }
                            }
                        },
                        "notes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }

            },
            "required":["template"]
        }
    },
    "type": "object",
    "properties": {
        "apiVersion": {
            "const": "mahjong.io/v1alpha1"
        },
        "kind": {
            "const": "Deployment"
        },
        "metadata": {
            "$ref": "#/definitions/metadata"
        },
        "spec": {
            "$ref": "#/definitions/spec"
        }
    }
}